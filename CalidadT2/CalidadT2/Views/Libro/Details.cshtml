@model CalidadT2.Models.Libro
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-5 item-photo">
            <img style="max-width:100%;" src="@Model.Imagen" />
        </div>
        <div class="col-7" style="border:0px solid gray">
            <!-- Datos del vendedor y titulo del producto -->
            <h3>@Model.Nombre</h3>
            <h5>@Model.Autor.Nombres</h5>

            <div class="star-rating">
                <ul class="list-inline">
                    @for (var i = 0; i < Model.Puntaje; i++)
                    {
                        <li class="list-inline-item"><i class="fa fa-star"></i></li>
                    }
                    @for (var i = 0; i < 5 - Model.Puntaje; i++)
                    {
                        <li class="list-inline-item"><i class="fa fa-star-o"></i></li>
                    }
                </ul>
            </div>
            <!-- Detalles especificos del producto -->
